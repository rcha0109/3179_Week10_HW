{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/rcha0109/3179_Week10_HW/main/data/GII_long_cleaned.csv",
    "format": {"type": "csv"}
  },
  "vconcat": [
    {
      "width": 838,
      "height": 350,
      "projection": {"type": "equalEarth"}, 
      "transform": [
        {"filter": {"param": "year_brush"}},
        {
          "lookup": "iso3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/rcha0109/3179_Week10_HW/main/js/WorldMapWithGraticuleAndOcean.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ISO_A3_EH"
          },
          "as": "geo"
        }
      ],
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/rcha0109/3179_Week10_HW/main/js/WorldMapWithGraticuleAndOcean.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/rcha0109/3179_Week10_HW/main/js/WorldMapWithGraticuleAndOcean.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "gii",
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "legend": {"title": "Gender Inequality Index"}
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {"field": "year", "type": "ordinal", "title": "Year"},
              {"field": "gii", "type": "quantitative", "title": "Gender Inequality Index"}
            ]
          }
        }
      ]
    },
    {
      "width": 838,
      "height": 55,
      "mark": "line",
      "title": {
        "text": "Use this world average line chart to filter data by year.",
        "font": "Nunito Sans",
        "fontSize": 15,
        "fontWeight": 700,
        "offset": 3
      },
      "params": [
        {
          "name": "year_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "transform": [
        {"filter": "datum.country == 'World'"}
      ],
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "gii",
          "type": "quantitative",
          "title": "Gender Inequality Index"
        },
        "color": {"value": "#d73027"}
      }
    },
    {
      "width": 838,
      "height": 150,
      "mark": {
        "type": "line",
        "point": true
      },
      "title": {
            "text": "Tracking Regional Gender Gaps",
            "subtitle": "Comparing gender disparities across decades and regions.",
            "anchor": "start",
            "font": "Nunito Sans",
            "fontSize": 20,
            "fontWeight": 700,
            "subtitleFont": "Nunito Sans",
            "subtitleFontSize": 14,
            "subtitleFontStyle": "italic",
            "subtitleColor": "gray",
            "offset": 15
          },
      "params": [
        {
          "name": "year_brush",
          "select": {"type": "interval", "encodings": ["x"], "resolve": "union"}
        }
      ],
      "transform": [
        {"filter": {"param": "year_brush"}},
        {"filter": "datum.country != null"}
      ],
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "gii",
          "type": "quantitative",
          "title": "Gender Inequality Index"
        },
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": [
              "Middle East & North Africa",
              "East Asia & Pacific",
              "Europe & Central Asia",
              "Latin America & Caribbean",
              "South Asia",
              "Sub-Saharan Africa"
            ],
            "range": ["#1b9e77", "#ff7f0e", "#7570b3", "#e7298a", "#66a61e", "#e6ab02"]
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Region"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "gii", "type": "quantitative", "title": "Gender Inequality Index"}
        ]
      }
    }
  ]
}
