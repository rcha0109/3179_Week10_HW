{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 250,
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/rcha0109/3179_Week10_HW/main/data/income_and_literacy_2024.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country Name",
      "type": "nominal",
      "title": "Income Group",
      "sort": ["Low income", "Lower middle income", "Middle income", "Upper middle income"],
      "axis": {
        "labelAngle": 0,
        "titleFontSize": 12
      }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Literacy Rate (%)",
      "axis": {"titleFontSize": 12}
    },
    "color": {
      "field": "Indicator Name",
      "type": "nominal",
      "title": "Category",
      "scale": {
        "domain": ["Female Literacy", "Male Literacy"],
        "range": ["#e377c2", "#1f77b4"]
      }
    },
    "xOffset": {"field": "Indicator Name"},
    "tooltip": [
      {"field": "Country Name", "title": "Income Group"},
      {"field": "Indicator Name", "title": "Category"},
      {"field": "Value", "title": "Literacy Rate (%)", "format": ".1f"}
    ]
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "orient": "top-left"
    }
  }
  
}
